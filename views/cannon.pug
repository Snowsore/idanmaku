head
	style
		include style.css
	meta(name='viewport',content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0')
body
	form#cannon
		input#ammo(autocomplete='off' style='width:20px')

script(src="https://assets.snowsore.com/node_modules/socket.io-client/dist/socket.io.js")
script.
	(() => {
		const socket = io();
		socket.on('connect', () => {
			socket.emit('joinRoom', window.location.pathname.substr(7));
		});
		const ammo = document.getElementById('ammo');
		const cannon = document.getElementById('cannon');
		cannon.addEventListener('submit', (e) => {
			e.preventDefault();
			socket.emit('fire', ammo.value);
			ammo.value = '';
			return false;
		});
	})();
